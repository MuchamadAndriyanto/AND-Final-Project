<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.RiwayatPesananKosongFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvRiwayat"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="30dp"
            android:text="Riwayat Pesanan"
            android:textStyle="bold"
            android:textColor="#151515"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivSearch"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_alignTop="@id/tvRiwayat"
            android:layout_marginStart="30dp"
            android:layout_marginTop="-1dp"
            android:layout_toEndOf="@id/tvRiwayat"
            android:src="@drawable/baseline_search_24" />

        <ImageView
            android:id="@+id/iv_filter"
            android:layout_width="77dp"
            android:layout_height="32dp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/tvRiwayat"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:src="@drawable/ic_filter" />

        <ImageView
            android:id="@+id/personSearch"
            android:layout_width="237.76dp"
            android:layout_height="153.26dp"
            android:layout_centerInParent="true"
            android:src="@drawable/person_search" />

        <TextView
            android:id="@+id/tvHasilPencarian"
            android:layout_below="@+id/personSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textSize="14sp"
            android:text="Oops! Riwayat pesanan kosong!"
            android:textColor="@color/purple" />

        <TextView
            android:id="@+id/cobaLagi"
            android:layout_below="@+id/tvHasilPencarian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="14sp"
            android:text="Anda belum melakukan pemesanan"
            android:textColor="@color/black" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
