<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:background="@drawable/img"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="25dp"
            android:text="Hei, Mau kemana?"
            android:textColor="#151515"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="@color/white">

                    <LinearLayout
                        android:id="@+id/layoutDeparture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/ivPesawat"
                            android:layout_width="19.95dp"
                            android:layout_height="17.35dp"
                            android:src="@drawable/img_6"/>

                        <TextView
                            android:id="@+id/tvFrom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="From"
                            android:layout_marginLeft="12dp"
                            android:textSize="12sp"
                            android:textColor="#8A8A8A"/>

                        <TextView
                            android:id="@+id/tvJakarta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:lineHeight="24dp"
                            android:text="Jakarta (JKTA)"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="14dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginEnd="32dp"
                        android:background="#D0D0D0"
                        android:layout_below="@id/layoutDeparture"/>

                    <LinearLayout
                        android:id="@+id/layoutArrival"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_below="@id/divider"
                        >
                        <ImageView
                            android:id="@+id/ivPesawat2"
                            android:layout_width="19.95dp"
                            android:layout_height="17.35dp"
                            android:src="@drawable/img_6"/>

                        <TextView
                            android:id="@+id/tvTo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="To"
                            android:layout_marginLeft="12dp"
                            android:textSize="12sp"
                            android:textColor="#8A8A8A"/>

                        <TextView
                            android:id="@+id/tvMelbourne"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Melbourne (MLB)"
                            android:layout_marginStart="35dp"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:lineHeight="24dp"
                            android:gravity="center"/>
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/ibPanah"
                        android:layout_width="13.33dp"
                        android:layout_height="13.33dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@color/white"
                        android:src="@drawable/img_10"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:id="@+id/tvPulangPergi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pulang-pergi?"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"/>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:checked="true"
                        app:thumbTint="#FFFFFF"
                        app:trackTint="#4B1979" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="12dp">

                    <RelativeLayout
                        android:id="@+id/dateDeparture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/ivDateDeparture"
                            android:layout_width="19.24dp"
                            android:layout_height="20.93dp"
                            android:src="@drawable/img_7"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp"
                            android:layout_toEndOf="@id/ivDateDeparture">

                            <TextView
                                android:id="@+id/tvDeparture"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Departure"
                                android:textSize="14sp"
                                android:textColor="#8A8A8A"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1 Maret 2023"
                                android:layout_marginTop="6dp"
                                android:textSize="14sp"
                                android:textColor="#000000"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="10dp"
                                android:background="#D0D0D0"/>

                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/dateReturn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/ivdateReturn"
                            android:layout_width="19.24dp"
                            android:layout_height="20.93dp"
                            android:src="@drawable/img_7"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp"
                            android:layout_toEndOf="@id/ivdateReturn">

                            <TextView
                                android:id="@+id/tvReturn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Return"
                                android:textSize="14sp"
                                android:textColor="#8A8A8A"/>

                            <TextView
                                android:id="@+id/tvPilihTanggal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="pilih tanggal"
                                android:layout_marginTop="6dp"
                                android:textSize="14sp"
                                android:textColor="#7126B5"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="10dp"
                                android:background="#D0D0D0"/>
                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="16dp">
                    <RelativeLayout
                        android:id="@+id/Passangers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/ivPassangers"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/img_8"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp"
                            android:layout_toEndOf="@id/ivPassangers">

                            <TextView
                                android:id="@+id/tvPassengers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Passengers"
                                android:textSize="14sp"
                                android:textColor="#8A8A8A"/>

                            <TextView
                                android:id="@+id/tvPenumpang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2 Penumpang"
                                android:layout_marginTop="6dp"
                                android:textSize="14sp"
                                android:textColor="#000000"/>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="10dp"
                                android:background="#D0D0D0"/>
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/SeatClass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/ivSeatClass"
                            android:layout_width="12dp"
                            android:layout_height="20dp"
                            android:src="@drawable/img_9"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp"
                            android:layout_toEndOf="@id/ivSeatClass">

                            <TextView
                                android:id="@+id/tvSeatClass"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Seat Class"
                                android:textSize="14sp"
                                android:textColor="#8A8A8A"/>

                            <TextView
                                android:id="@+id/tvBusiness"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Business"
                                android:layout_marginTop="6dp"
                                android:textSize="14sp"
                                android:textColor="#000000"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="10dp"
                                android:background="#D0D0D0"/>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cari Penerbangan"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:lineHeight="20dp"
                    style="@style/Widget.Material3.Button"
                    android:backgroundTint="#7126B5"
                    app:layout_constraintTop_toBottomOf="@id/Passangers"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvDestinationFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="Destination Favorite"
        android:textColor="#151515"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topLayout" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvDestinationFavorite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <!--add scrollview-->

</androidx.constraintlayout.widget.ConstraintLayout>