<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/cardDetail"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="1dp">

            <TextView
                android:id="@+id/status"
                style="@style/TextBody10Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="10dp"
                android:background="@drawable/badge_shape_paid"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Paid!"
                android:textColor="@color/white" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp">

                <LinearLayout
                    android:id="@+id/label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:padding="9dp">

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/layoutFlightSchedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/label">

                    <LinearLayout
                        android:id="@+id/layoutDeparture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="2dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvjakarta"
                            style="@style/TextBody14Bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineHeight="20dp"
                            android:text="Jakarta"
                            android:textColor="@color/neutral_05"
                            tools:ignore="UnusedAttribute" />

                        <TextView
                            android:id="@+id/tvBerangkat"
                            style="@style/TextBody12Regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:lineHeight="20dp"
                            android:text="5 Maret 2023"
                            android:textColor="@color/neutral_05"
                            android:textSize="10sp"
                            tools:ignore="SmallSp,UnusedAttribute" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvJamBerangkat"
                                style="@style/TextBody12Regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:lineHeight="20dp"
                                android:text="19"
                                android:textColor="@color/neutral_05"
                                tools:ignore="UnusedAttribute" />

                            <TextView
                                android:id="@+id/tvwib"
                                style="@style/TextBody12Regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="2dp"
                                android:lineHeight="20dp"
                                android:text="WIB"
                                android:textColor="@color/neutral_05"
                                tools:ignore="UnusedAttribute" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutFlightTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@id/layoutDeparture"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvJam"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:fontFamily="@font/poppins_medium"
                                android:lineHeight="18dp"
                                android:text="4h "
                                android:textColor="@color/neutral_03"
                                android:textSize="12sp"
                                tools:ignore="UnusedAttribute" />

                            <TextView
                                android:id="@+id/tvMenit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:layout_marginTop="2dp"
                                android:fontFamily="@font/poppins_medium"
                                android:lineHeight="18dp"
                                android:text="0m"
                                android:textColor="@color/neutral_03"
                                android:textSize="12sp"
                                tools:ignore="UnusedAttribute" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:src="@drawable/arrow"
                            tools:ignore="ContentDescription" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutArrive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="70dp"
                        android:layout_marginTop="2dp"
                        android:layout_toEndOf="@id/layoutFlightTime"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvMelbourne"
                            style="@style/TextBody14Bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineHeight="20dp"
                            android:text="Melbourne"
                            android:textColor="@color/neutral_05"
                            tools:ignore="UnusedAttribute" />

                        <TextView
                            android:id="@+id/tvKedatangan"
                            style="@style/TextBody12Regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineHeight="20dp"
                            android:text="5 Maret 2023"
                            android:textColor="@color/neutral_05"
                            android:textSize="10sp"
                            tools:ignore="SmallSp,UnusedAttribute" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvJamKedatangan"
                                style="@style/TextBody12Regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:lineHeight="20dp"
                                android:text="21"
                                android:textColor="@color/neutral_05"
                                tools:ignore="UnusedAttribute" />

                            <TextView
                                android:id="@+id/tvwib2"
                                style="@style/TextBody12Regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="2dp"
                                android:lineHeight="20dp"
                                android:text="WIB"
                                android:textColor="@color/neutral_05"
                                tools:ignore="UnusedAttribute" />

                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/ic_maps"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="223dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/ic_maps"
                        tools:ignore="ContentDescription" />


                </RelativeLayout>

                <View
                    android:id="@+id/grid"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/layoutFlightSchedule"
                    android:layout_marginTop="16dp"
                    android:background="@color/neutral_02" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/grid">

                    <LinearLayout
                        android:id="@+id/layoutAirline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/Boking"
                            style="@style/TextBody12Bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineHeight="18dp"
                            android:text="Booking Code : "
                            android:textColor="@color/neutral_05"
                            tools:ignore="UnusedAttribute" />

                        <TextView
                            android:id="@+id/Kode"
                            style="@style/TextBody12Regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineHeight="18dp"
                            android:text="453653657"
                            android:textColor="@color/neutral_05"
                            tools:ignore="UnusedAttribute" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutClass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_toEndOf="@id/layoutAirline"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/Class"
                            style="@style/TextBody12Bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Class : "
                            android:textColor="@color/neutral_05" />

                        <TextView
                            android:id="@+id/Economy"
                            style="@style/TextBody12Regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineHeight="18dp"
                            android:text="Economy"
                            android:textColor="@color/neutral_05"
                            tools:ignore="UnusedAttribute" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutharga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_toEndOf="@id/layoutClass"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextBody12Bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:text="TOTAL : "
                            android:textColor="@color/neutral_05" />

                        <TextView
                            android:id="@+id/tvPrice"
                            style="@style/TextTitle16Medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineHeight="24dp"
                            android:text="IDR 5.950.000"
                            android:textColor="@color/purple"
                            android:textSize="14sp"
                            tools:ignore="UnusedAttribute" />
                    </LinearLayout>
                </RelativeLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardview"
            android:layout_marginStart="15dp"
            android:layout_marginTop="-15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="1dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp">

                <RelativeLayout
                    android:id="@+id/layoutFlightSchedule2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/layoutDeparture2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="2dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvjakarta2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextBody14Bold"
                            android:lineHeight="20dp"
                            android:text="Jakarta"
                            android:textColor="@color/neutral_05"
                            tools:ignore="UnusedAttribute" />

                        <TextView
                            android:id="@+id/tvBerangkat2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            style="@style/TextBody12Regular"
                            android:lineHeight="20dp"
                            android:text="5 Maret 2023"
                            android:textColor="@color/neutral_05"
                            tools:ignore="UnusedAttribute" />

                        <TextView
                            android:id="@+id/tvJamBerangkat2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            style="@style/TextBody12Regular"
                            android:lineHeight="20dp"
                            android:text="19:10"
                            android:textColor="@color/neutral_05"
                            tools:ignore="UnusedAttribute" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutFlightTime2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="13dp"
                        android:layout_toEndOf="@id/layoutDeparture2"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvJam2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:fontFamily="@font/poppins_medium"
                                android:lineHeight="18dp"
                                android:text="4h "
                                android:textColor="@color/neutral_03"
                                android:textSize="12sp"
                                tools:ignore="UnusedAttribute" />

                            <TextView
                                android:id="@+id/tvMenit2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:layout_marginTop="2dp"
                                android:fontFamily="@font/poppins_medium"
                                android:lineHeight="18dp"
                                android:text="0m"
                                android:textColor="@color/neutral_03"
                                android:textSize="12sp"
                                tools:ignore="UnusedAttribute" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:src="@drawable/arrow"
                            tools:ignore="ContentDescription" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/layoutArrive2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="2dp"
                        android:layout_toEndOf="@id/layoutFlightTime2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvMelbourne2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextBody14Bold"
                            android:lineHeight="20dp"
                            android:text="Melbourne"
                            android:textColor="@color/neutral_05"
                            tools:ignore="UnusedAttribute" />

                        <TextView
                            android:id="@+id/tvKedatangan2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextBody12Regular"
                            android:lineHeight="20dp"
                            android:text="5 Maret 2023"
                            android:textColor="@color/neutral_05"
                            tools:ignore="UnusedAttribute" />

                        <TextView
                            android:id="@+id/tvJamKedatangan2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            style="@style/TextBody12Regular"
                            android:lineHeight="20dp"
                            android:text="21:10"
                            android:textColor="@color/neutral_05"
                            tools:ignore="UnusedAttribute" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/ic_maps"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="223dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/ic_maps"
                        tools:ignore="ContentDescription" />

                </RelativeLayout>

                <View
                    android:id="@+id/grid2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/layoutFlightSchedule2"
                    android:layout_marginTop="16dp"
                    android:background="@color/neutral_02" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/grid2">

                    <LinearLayout
                        android:id="@+id/layoutAirline2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextBody12Bold"
                            android:lineHeight="18dp"
                            android:text="Booking Code : "
                            android:textColor="@color/neutral_05"
                            tools:ignore="UnusedAttribute" />

                        <TextView
                            android:id="@+id/tvBooking2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextBody12Regular"
                            android:lineHeight="18dp"
                            android:text="453653657"
                            android:textColor="@color/neutral_05"
                            tools:ignore="UnusedAttribute" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutClass2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical"
                        android:layout_toEndOf="@id/layoutAirline2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextBody12Bold"
                            android:text="Class : "
                            android:textColor="@color/neutral_05"/>

                        <TextView
                            android:id="@+id/tvClass2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextBody12Regular"
                            android:lineHeight="18dp"
                            android:text="Economy"
                            android:textColor="@color/neutral_05"
                            tools:ignore="UnusedAttribute" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutharga2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical"
                        android:layout_toEndOf="@id/layoutClass2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextBody12Bold"
                            android:text="TOTAL : "
                            android:textColor="@color/neutral_05"
                            android:layout_gravity="end" />

                        <TextView
                            android:id="@+id/tvTotalHarga2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextTitle16Medium"
                            android:lineHeight="24dp"
                            android:text="IDR 5.950.000"
                            android:textColor="@color/purple"
                            tools:ignore="UnusedAttribute" />
                    </LinearLayout>
                </RelativeLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>