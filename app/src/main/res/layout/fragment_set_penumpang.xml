<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.Beranda.SetPenumpangFragment">


    <ImageView
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_24"
        android:layout_margin="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Garis atas -->
    <View
        android:id="@+id/gridTop"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#7C7C7C"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnClose"/>

    <!-- Layout Penumpang -->
    <LinearLayout
        android:id="@+id/passangerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/gridTop">

        <!-- Penumpang Dewasa -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgAdult"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/dewasa" />

            <LinearLayout
                android:id="@+id/layoutAdult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/imgAdult">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dewasa"
                    android:textSize="14sp"
                    android:textColor="#151515"
                    android:textStyle="bold"
                    android:lineSpacingExtra="-1sp"
                    android:gravity="top"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(12 tahun ke atas)"
                    android:textSize="12sp"
                    android:textColor="#8A8A8A"
                    android:lineSpacingExtra="0sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/decPassangerAdult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="40dp"
                    android:minHeight="40dp"
                    android:src="@drawable/ic_minimize_24"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/tvPassangerAdult"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:text="2"
                    android:textSize="16sp"
                    android:textColor="#151515"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="6dp" />

                <ImageButton
                    android:id="@+id/addPassangerAdult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="40dp"
                    android:minHeight="40dp"
                    android:src="@drawable/ic_add_24"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            </LinearLayout>
        </RelativeLayout>

        <!-- Garis pemisah -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D0D0D0"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/btnClose"/>

        <!-- Penumpang Anak -->
        <RelativeLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgChild"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/anak" />

            <LinearLayout
                android:id="@+id/layoutChild"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/imgChild">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anak"
                    android:textSize="14sp"
                    android:textColor="#151515"
                    android:textStyle="bold"
                    android:lineSpacingExtra="-1sp"
                    android:gravity="top"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(2-11 tahun)"
                    android:textSize="12sp"
                    android:textColor="#8A8A8A"
                    android:lineSpacingExtra="0sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/decPassangerChild"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="40dp"
                    android:minHeight="40dp"
                    android:src="@drawable/ic_minimize_24"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/tvPassangerChild"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:text="0"
                    android:textSize="16sp"
                    android:textColor="#151515"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="6dp"/>

                <ImageButton
                    android:id="@+id/addPassangerChild"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="40dp"
                    android:minHeight="40dp"
                    android:src="@drawable/ic_add_24"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            </LinearLayout>
        </RelativeLayout>

        <!-- Garis pemisah -->
        <View
            android:id="@+id/gridTop2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D0D0D0"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/btnClose"/>

        <!-- Penumpang Bayi -->
        <RelativeLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgBaby"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/baby" />

            <LinearLayout
                android:id="@+id/layoutBaby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/imgBaby">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bayi"
                    android:textSize="14sp"
                    android:textColor="#151515"
                    android:textStyle="bold"
                    android:lineSpacingExtra="-1sp"
                    android:gravity="top"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(Dibawah 2 tahun)"
                    android:textSize="12sp"
                    android:textColor="#8A8A8A"
                    android:lineSpacingExtra="0sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/decPassangerBaby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="40dp"
                    android:minHeight="40dp"
                    android:src="@drawable/ic_minimize_24"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/tvPassangerBaby"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:text="0"
                    android:textSize="16sp"
                    android:textColor="#151515"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="6dp"/>

                <ImageButton
                    android:id="@+id/addPassangerBaby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="40dp"
                    android:minHeight="40dp"
                    android:src="@drawable/ic_add_24"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:id="@+id/gridTop3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D0D0D0"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/btnClose"/>

        <Button
            android:id="@+id/btnPilihPenumpang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="start"
            android:layout_marginTop="15dp"
            android:padding="16dp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            app:backgroundTint="@null"
            android:background="@drawable/button_radius"
            android:text="Simpan"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/gridTop3"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
