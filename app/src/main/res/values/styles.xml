    <!--    Button-->
    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingHorizontal" tools:ignore="NewApi">24dp</item>
        <item name="android:paddingVertical" tools:ignore="NewApi">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">16dp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">20dp</item>
        <item name="android:textAlignment">center</item>
        <item name="minHeight">48dp</item>
    </style>

    <style name="ButtonPrimarySmall" parent="Widget.MaterialComponents.Button">
        <item name="android:paddingHorizontal" tools:ignore="NewApi">24dp</item>
        <item name="android:paddingVertical" tools:ignore="NewApi">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">16dp</item>
